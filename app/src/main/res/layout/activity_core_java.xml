<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoreJava">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mehrun"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/core_java_quiz"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"


            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_Blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/what_is_the_range_of_short_data_type_in_java"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <RadioGroup
            android:id="@+id/rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/b1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/_128_to_127"
                android:textColor="@color/white"
                android:textSize="16sp"

                />

            <RadioButton
                android:id="@+id/b2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/_32768_to_32767"
                android:textColor="@color/white"
                android:textSize="16sp"


                />

            <RadioButton
                android:id="@+id/b3"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/_2147483648_to_2147483647"
                android:textColor="@color/white"
                android:textSize="16sp"


                />

            <RadioButton
                android:id="@+id/b4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/none_of_the_mentioned"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_Blue" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/an_expression_involving_byte_int_and_literal_numbers_is_promoted_to_which_of_these"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <RadioGroup
            android:id="@+id/rg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/b5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/optint"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/b6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/optlong"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/b7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/optbyte"
                android:textColor="@color/white"
                android:textSize="16sp"


                />

            <RadioButton
                android:id="@+id/b8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/white"
                android:onClick="onRadioButtonClicked"
                android:text="@string/optfloat"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_Blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/what_is_jvm"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="@string/type_your_answer"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkanswer"
            android:padding="10dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/mehrun"
            android:textColor="@color/white"


            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_Blue"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="@string/checkboxques"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/c1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread_runnable_r_string_name"
            android:onClick="onCheckboxClicked"
            />

        <CheckBox
            android:id="@+id/c2"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread"
            android:onClick="onCheckboxClicked"

            />
        <CheckBox
            android:id="@+id/c3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread_int_priority"
            android:onClick="onCheckboxClicked"

            />
        <CheckBox
            android:id="@+id/c4"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread_runnable_r_threadgroup_g"
            android:onClick="onCheckboxClicked"

            />
        <CheckBox
            android:id="@+id/c5"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/thread_runnable_r_int_priority"
            android:onClick="onCheckboxClicked"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/light_Blue" />
    </LinearLayout>

</ScrollView>

